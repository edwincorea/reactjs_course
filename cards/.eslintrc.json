{
    "extends": "eslint:recommended",
    "plugins": [
        "react"
    ],
    "env": {
        "browser": true, //needed for client code: window object
        "commonjs": true,
        "node": true,
        "es6": true,
        "jasmine": true
    },
    //Parser Options for ESLint parser
    // "parserOptions": {
    //     "sourceType": "module",
    //     "ecmaFeatures": {
    //         "experimentalObjectRestSpread": true,
    //         "jsx": true
    //     }
    // }
    //Parser Options for Babel-ESLint parser
    //this parser does not use .babelrc
    "parser": "babel-eslint",
    "rules": {
        "indent": [
            "error",
            4, //"tabs" does not work
            {"SwitchCase": 1}
        ],
        "semi": ["error", "always"],
        "no-console": "off",
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    },
    "globals": {
        "console": false //cannot assign values to console
    }
}